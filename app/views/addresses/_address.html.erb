<div id="<%= dom_id address %>" class="mt-3 mb-3">
  <div class="lead">
    <strong>Street:</strong> <%= address.street %>
  </div>

  <div class="lead">
    <strong>City:</strong> <%= address.city %>
  </div>

  <div class="lead">
    <strong>State:</strong> <%= address.state %>
  </div>

  <div class="lead">
    <strong>Zip code:</strong> <%= address.zip_code %>
  </div>

  <div class="lead">
    <strong>Country:</strong> <%= address.country %>
  </div>

  <div class="lead">
    <strong>Neighborhood:</strong> <%= address.neighborhood %>
  </div>
</div>

<div class="d-flex flex-row mb-3">
  <%= link_to 'Edit this address', "#{edit_address_path(address)}?contact_id=#{address.contact_id}", class: "btn btn-primary" %>
  <%= button_to "Destroy this address", address, method: :delete, class: "btn btn-danger ms-1" %>
</div>
